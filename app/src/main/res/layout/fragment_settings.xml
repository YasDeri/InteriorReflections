<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="@string/settings_nav"
    android:padding="@dimen/head_padding"
    android:textAlignment="center"
    android:fontFamily="cursive"
    android:id="@+id/settings_text"
    android:textColor="@color/white"
    android:textSize="@dimen/textSize_thirty">

</TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:text="Old Password"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:id="@+id/old_pass_txt"
        android:textColor="@color/white"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/old_pass_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:background="@drawable/rounded_crs"
        android:layout_marginHorizontal="80dp"
        android:fontFamily="monospace"
        android:textSize="22dp"
        android:id="@+id/old_pass_edit"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/old_pass_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"

        android:text="New Password"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:id="@+id/new_pass_txt"
        android:textColor="@color/white"
        />


    <EditText
        android:layout_width="match_parent"
