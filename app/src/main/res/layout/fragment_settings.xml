        app:layout_constraintTop_toBottomOf="@id/new_pass_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:background="@drawable/rounded_crs"
        android:layout_marginHorizontal="80dp"
        android:fontFamily="monospace"
        android:textSize="22dp"
        android:id="@+id/new_pass_edit"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/new_pass_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Confirm Password"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:id="@+id/confirm_pass_txt"
        android:textColor="@color/white"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rounded_crs"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:layout_marginHorizontal="80dp"
        android:textSize="22dp"
        android:id="@+id/confirm_pass_edit"

        />
